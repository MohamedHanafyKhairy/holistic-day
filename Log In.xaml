<Page x:Class="Exam3.Log_In"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Exam3"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Log_In">

    <Grid Background="#FFA4A4A4">
        <TextBox x:Name="user_box" HorizontalAlignment="Left" Margin="192,87,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="337" Height="33"/>
        <TextBox x:Name="pass_box" HorizontalAlignment="Left" Margin="192,149,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="337" Height="31"/>
        <Button x:Name="loog_btn" Content="Log In" HorizontalAlignment="Left" Margin="333,265,0,0" VerticalAlignment="Top" Height="45" Width="113" Click="loog_btn_Click"/>
        <Label Content="User Name" HorizontalAlignment="Left" Margin="71,86,0,0" VerticalAlignment="Top" Height="33" Width="90"/>
        <Label Content="Password" HorizontalAlignment="Left" Margin="86,147,0,0" VerticalAlignment="Top"/>

    </Grid>
</Page>
