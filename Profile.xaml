<Page x:Class="Exam3.Profile"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Exam3"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Profile">

    <Grid Background="#FFA4A4A4">
        <Image HorizontalAlignment="Left" Height="100" Margin="44,38,0,0" VerticalAlignment="Top" Width="100">
            <Image.OpacityMask>
                <ImageBrush ImageSource="/Hanafolla Logo.jpg" Opacity="0.995"/>
            </Image.OpacityMask>
        </Image>
        <Label x:Name="lable_name" Content="" HorizontalAlignment="Left" Margin="196,57,0,0" VerticalAlignment="Top" Width="174" Background="Black" Foreground="White"/>
        <DataGrid x:Name="pg" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="0,225,0,0" SelectionChanged="DataGrid_SelectionChanged"/>
        <TextBox x:Name="px" HorizontalAlignment="Left" Margin="400,61,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>

    </Grid>
</Page>
